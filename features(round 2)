  <script>
    // Mood Result
    function calculateMood() {
      const mood = document.querySelector('input[name="mood"]:checked');
      if (!mood) return alert("Please select your mood.");
      alert("Your current mood: " + mood.parentElement.innerText.trim());
    }

    // Stress Result
    function calculateStress() {
      const s1 = document.querySelector('input[name="s1"]:checked');
      const s2 = document.querySelector('input[name="s2"]:checked');
      if (!s1 || !s2) return alert("Please answer both stress questions.");

      let score = 0;
      if (s1.value === "Sometimes") score++;
      if (s1.value === "Often") score += 2;
      if (s2.value === "A little") score++;
      if (s2.value === "Yes") score += 2;

      let result = "";
      if (score <= 1) result = "Low Stress";
      else if (score <= 3) result = "Moderate Stress";
      else result = "High Stress";

      alert("Your Stress Level: " + result);
    }
  </script>

  <style>
    @keyframes calmGradient {
